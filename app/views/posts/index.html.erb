<% content_for :left_column do %>
    <h1>All Posts</h1>
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
        </tr>
        <% @posts.each do |post| %>
            <tr>
                <td>
                    <%= post.title %>
                </td>
                <td>
                    <%= post.content %>
                </td>
                <td>
                    <%= "#{post.user.first_name} #{post.user.last_name}" %>
                </td>
            </tr>
            <% end %>
    </table>
<% end %>

<% content_for :middle_column do %>
    <h1>New Post</h1>
    <form action="posts" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <p>Title</p>
            <input type="text" class="form-control" name="post[title]" class="form-control"  placeholder="Title">
        </div>
        <div class="form-group">
            <p>Content</p>
            <input type="text" class="form-control" name="post[content]" class="form-control"  placeholder="Content">
        </div>
        <div class="form-group">
            <select name="post[user_id]">
                <% @users.each do |author|%>
                    <option value="<%= author.id %>"><%= "#{author.first_name} #{author.last_name}" %></option>
                <% end %>
            </select>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>
<% end %>

<% content_for :right_column do %>
<h1>Go to User Page</h1>    
<a href="users" class="btn btn-info">All Users</a>
<% end %>